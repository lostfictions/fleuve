{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "ES2020",
    ],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true // for ts-jest, who is a needy asshole
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "transpileOnly": true,
  },
}